---
export interface Props {
  title: string;
  excerpt: string;
  href: string;
  image?: string;
  date?: string;
  category?: string;
}

const { title, excerpt, href, image, date, category } = Astro.props;

// Format date if provided
const formattedDate = date ? new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}) : '';
---

<article class="card card-hover group">
  <a href={href} class="block">
    {image && (
      <div class="aspect-video overflow-hidden">
        <img 
          src={image} 
          alt={title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          loading="lazy"
        />
      </div>
    )}
    
    <div class="p-6">
      {(date || category) && (
        <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
          {date && <time datetime={date}>{formattedDate}</time>}
          {date && category && <span>â€¢</span>}
          {category && (
            <span class="bg-brand-100 text-brand-700 px-2 py-1 rounded-full text-xs font-medium">
              {category}
            </span>
          )}
        </div>
      )}
      
      <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-brand-600 transition-colors line-clamp-2">
        {title}
      </h3>
      
      <p class="text-gray-600 line-clamp-3 leading-relaxed">
        {excerpt}
      </p>
      
      <div class="mt-4 flex items-center text-brand-600 font-medium text-sm group-hover:text-brand-700 transition-colors">
        Read more
        <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    </div>
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 